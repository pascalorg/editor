{
  "name": "@pascal/viewer",
  "version": "0.1.0",
  "description": "React Three Fiber component for viewing Pascal 3D scenes",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "types.d.ts"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "immer": "^10.2.0",
    "mitt": "^3.0.1",
    "nanoid": "^5.1.6",
    "tailwind-merge": "^3.4.0",
    "three-custom-shader-material": "^6.1.0",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": ">=0.156",
    "@react-three/fiber": ">=9.0.0",
    "@react-three/drei": ">=10.0.0",
    "@react-three/csg": ">=4.0.0",
    "@react-three/uikit": ">=1.0.0",
    "@react-spring/three": ">=10.0.0"
  },
  "devDependencies": {
    "@pascal/core": "workspace:*",
    "@types/react": "^19.0.0",
    "tsup": "^8.5.1"
  }
}
